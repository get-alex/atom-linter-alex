{
  "name": "linter-alex",
  "version": "3.2.0",
  "description": "Linter plugin using alex to catch insensitive, inconsiderate writing",
  "license": "MIT",
  "keywords": [
    "markdown",
    "text",
    "alex",
    "equal",
    "race",
    "religion",
    "sex",
    "orientation",
    "identity",
    "gender",
    "sensitive",
    "insensitive",
    "neutral",
    "writing",
    "language",
    "english",
    "linter"
  ],
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
    "Blake Embrey <hello@blakeembrey.com>"
  ],
  "repository": "https://github.com/wooorm/atom-linter-alex",
  "bugs": "https://github.com/wooorm/atom-linter-alex/issues",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "alex": ">=3.0.0",
    "atom-package-deps": "^4.0.0",
    "minimatch": "^3.0.3"
  },
  "atomTestRunner": "atom-tap-test-runner",
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "atom-tap-test-runner": "^1.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.6.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-md": "remark *.md --quiet --frail",
    "build": "npm run build-md",
    "lint": "xo",
    "test-api": "atom --test test/index.js",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "xo": {
    "space": true
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
